{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "tauri-game-launcher",
  "version": "0.1.0",
  "identifier": "xyz.shuflduf.tauri-game-launcher",
  "build": {
    "beforeDevCommand": "deno task dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "deno task build",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "title": "Fizzler Game Launcher",
        "width": 1000,
        "minWidth": 1000,
        "height": 600,
        "minHeight": 600,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
